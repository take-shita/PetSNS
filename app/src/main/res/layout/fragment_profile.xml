<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:background="#FFC88A">
            <Space
                android:layout_width="30dp"
                android:layout_height="90dp" />
            <ImageButton
                android:id="@+id/snstopback"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:src="@drawable/yajirusitouka"
                tools:ignore="SpeakableTextPresentCheck"
                android:background="@null"/>
            <Space
                android:layout_width="361dp"
                android:layout_height="90dp"
                android:background="#FFC88A" />
            <ImageButton
                android:id="@+id/toukoubtn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:src="@drawable/toukoutouka"
                tools:ignore="SpeakableTextPresentCheck"
                android:background="@null"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:columnCount="4"
                    android:rowCount="2">

                    <Space
                        android:layout_width="35dp"
                        android:layout_height="120dp"
                        android:layout_row="0"
                        android:layout_rowSpan="2"
                        android:layout_column="0" />

                    <TextView
                        android:layout_width="421dp"
                        android:layout_height="90dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:gravity="left|bottom"
                        android:text="田實　優斗"
                        android:textSize="35dp" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_row="0"
                        android:layout_rowSpan="2"
                        android:layout_column="2"
                        android:scaleType="fitXY"
                        android:src="@drawable/cbr250rr" />

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="120dp"
                        android:layout_row="0"
                        android:layout_rowSpan="2"
                        android:layout_column="3" />

                    <TextView
                        android:layout_width="421dp"
                        android:layout_height="30dp"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:gravity="left|center"
                        android:text="yuto_1234"
                        android:textSize="22dp" />
                </GridLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="60dp" />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/pentatouka" />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="-15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ramunetouka" />
                    <TextView
                        android:layout_width="210dp"
                        android:layout_height="60dp"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:gravity="left|center"
                        android:text="フォロー42人"
                        android:textSize="24dp" />
                        </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <Space
                        android:layout_width="30dp"
                        android:layout_height="60dp" />
                    <TextView
                        android:layout_width="541dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:text="投稿"
                        android:textSize="24dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:orientation="horizontal">
                    <Space
                        android:layout_width="30dp"
                        android:layout_height="1dp" />
                    <TextView
                        android:layout_width="541dp"
                        android:layout_height="2dp"
                        android:background="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/cbr250rr" />
                        <TextView
                            android:layout_width="210dp"
                            android:layout_height="60dp"
                            android:gravity="left|center"
                            android:text="田實　優斗"
                            android:textSize="24dp" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="17h"
                            android:textSize="24dp" />
                        <ImageButton
                            android:id="@+id/hartbtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/harttouka"
                            tools:ignore="SpeakableTextPresentCheck"
                            android:background="@null"/>
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="3"
                            android:textSize="24dp" />
                        <ImageButton
                            android:id="@+id/sakujobtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/sakujotouka"
                            tools:ignore="SpeakableTextPresentCheck"
                            android:background="@null"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:text="かわいいねぇ"
                            android:textSize="24dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:text="#ハリネズミ"
                            android:textColor="#2385DB"
                            android:textSize="24dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#CCCCCC"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/harinezumi"
                            tools:ignore="SpeakableTextPresentCheck"
                            android:adjustViewBounds="true"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#CCCCCC"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/cbr250rr" />
                        <TextView
                            android:layout_width="210dp"
                            android:layout_height="60dp"
                            android:gravity="left|center"
                            android:text="田實　優斗"
                            android:textSize="24dp" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="17h"
                            android:textSize="24dp" />
                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/harttouka"
                            tools:ignore="SpeakableTextPresentCheck"
                            android:background="@null"/>
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="3"
                            android:textSize="24dp" />
                        <ImageButton
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/sakujotouka"
                            tools:ignore="SpeakableTextPresentCheck"
                            android:background="@null"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:text="かわいいねぇ"
                            android:textSize="24dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:text="#ハリネズミ"
                            android:textColor="#2385DB"
                            android:textSize="24dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#CCCCCC"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/harinezumi"
                            tools:ignore="SpeakableTextPresentCheck"
                            android:adjustViewBounds="true"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#CCCCCC"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>