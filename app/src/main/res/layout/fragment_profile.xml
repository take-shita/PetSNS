<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.ProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:ignore="UselessParent">
<!--        ヘッダー-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <Space
                android:layout_width="491dp"
                android:layout_height="80dp" />
            <ImageButton
                android:id="@+id/toukoubtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/toukoutouka"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck,VisualLintBounds"
                android:background="@null"/>

            <TextView
                android:layout_width="421dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-320dp"
                android:gravity="left|center"
                android:text="yuto_1234"
                android:textSize="22dp"
                tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck" />
        </LinearLayout>
<!--ヘッダー下から-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:columnCount="4"
                    android:rowCount="2">

                    <Space
                        android:layout_width="35dp"
                        android:layout_height="120dp"
                        android:layout_row="0"
                        android:layout_rowSpan="2"
                        android:layout_column="0" />


                    <TextView
                        android:layout_width="421dp"
                        android:layout_height="90dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_marginTop="-45dp"
                        android:gravity="left|bottom"
                        android:text="田實　優斗"
                        android:textSize="27dp"
                        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_row="0"
                        android:layout_rowSpan="2"
                        android:layout_column="2"
                        app:cardCornerRadius="60dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_row="0"
                            android:layout_rowSpan="2"
                            android:layout_column="2"
                            android:scaleType="fitXY"
                            android:src="@drawable/cbr250rr"
                            tools:ignore="ContentDescription" />

                    </androidx.cardview.widget.CardView>

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="120dp"
                        android:layout_row="0"
                        android:layout_rowSpan="2"
                        android:layout_column="3" />

                </GridLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/pentatouka"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="-15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ramunetouka"
                        tools:ignore="ContentDescription,RtlHardcoded" />

                    <TextView
                        android:layout_width="210dp"
                        android:layout_height="60dp"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_marginTop="-13dp"
                        android:gravity="left|center"
                        android:text="フォロー42人"
                        android:textSize="20dp"
                        tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,TextSizeCheck" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <Space
                        android:layout_width="30dp"
                        android:layout_height="60dp" />

                    <TextView
                        android:layout_width="541dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:text="投稿"
                        android:textSize="24dp"
                        tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:orientation="horizontal">
                    <Space
                        android:layout_width="30dp"
                        android:layout_height="1dp" />
                    <TextView
                        android:layout_width="541dp"
                        android:layout_height="2dp"
                        android:background="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">




                    <androidx.cardview.widget.CardView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_row="0"
                            android:layout_rowSpan="2"
                            android:layout_column="2"
                            app:cardCornerRadius="60dp">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/cbr250rr"
                            tools:ignore="ContentDescription" />

                    </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="210dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="left|center"
                            android:text="田實　優斗"
                            android:textSize="24dp"
                            tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="17h"
                            android:textSize="24dp"
                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

                        <ToggleButton
                            android:id="@+id/hartbtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/button_selector"
                            android:textOn=""
                            android:textOff=""
                            android:scaleType="fitCenter"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="3"
                            android:textSize="24dp"
                            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />
                        <ImageButton
                            android:id="@+id/sakujobtn"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_marginTop="16dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/sakujotouka"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck"
                            android:background="@null"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="left|center"
                            android:text="かわいいねぇ"
                            android:textSize="24dp"
                            tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="left|center"
                            android:text="#ハリネズミ"
                            android:textColor="#2385DB"
                            android:textSize="24dp"
                            tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#CCCCCC"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/harinezumi"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#CCCCCC"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/cbr250rr"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:layout_width="210dp"
                            android:layout_height="60dp"
                            android:gravity="left|center"
                            android:text="田實　優斗"
                            android:textSize="24dp"
                            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="17h"
                            android:textSize="24dp"
                            tools:ignore="HardcodedText,SpUsage" />
                        <ToggleButton
                            android:id="@+id/hartbt"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/button_selector"
                            android:textOn=""
                            android:textOff=""
                            android:scaleType="fitCenter"
                            tools:ignore="SpeakableTextPresentCheck" />
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="3"
                            android:textSize="24dp"
                            tools:ignore="HardcodedText,SpUsage" />
                        <ImageButton
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_marginTop="16dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/sakujotouka"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck"
                            android:background="@null"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:text="かわいいねぇ"
                            android:textSize="24dp"
                            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:text="#ハリネズミ"
                            android:textColor="#2385DB"
                            android:textSize="24dp"
                            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#CCCCCC"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/harinezumi"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck"
                            android:adjustViewBounds="true"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#CCCCCC"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>